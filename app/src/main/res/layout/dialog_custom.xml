<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/custom_dialog_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_custom_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_top"
        android:gravity="center_horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="title"/>

    <TextView
        android:id="@+id/tv_custom_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dp"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fl_custom_conent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_content"
        android:visibility="gone">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_custom_dialog_navigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5px"
        android:background="@drawable/custom_dialog_bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_custom_dialog_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/btn_custom_dialog_cancel_selector"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:textColor="@color/txt_white_to_black_selector"
            android:visibility="gone"
            tools:text="cancel"/>

        <View
            android:id="@+id/v_custom_dialog_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@android:color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_custom_dialog_comfirm"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/btn_custom_dialog_comfirm_selector"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:textColor="@color/txt_white_to_black_selector"
            android:visibility="gone"
            tools:text="comfirm"/>

    </LinearLayout>
</LinearLayout>