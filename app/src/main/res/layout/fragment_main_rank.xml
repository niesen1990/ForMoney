<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.fuck.formoney.fragment.main.MainRankFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/primaryColor"
        android:paddingBottom="@dimen/activity_vertical_margin_half"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_half">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"/>

        <!--<android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动规则"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_xlarge"/>-->

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="第一名奖励1000元"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_large"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_first"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin_half"
            android:text="第二名奖励500元"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_large"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_second"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin_half"
            android:text="第三名奖励500元"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_large"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_third"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="活动时间: 11月份"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_middle"/>


    </RelativeLayout>

</RelativeLayout>
