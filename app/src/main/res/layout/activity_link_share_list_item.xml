<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
    android:layout_marginRight="@dimen/activity_horizontal_margin_half"
    android:layout_marginTop="@dimen/activity_horizontal_margin_half"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="聪明宝宝"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/txt_xlarge"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:background="#EEEEEE"
            android:padding="@dimen/activity_horizontal_margin">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_share"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="邀请的好友分享的越多赚的越多"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/txt_large"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tv_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_content"
                android:background="@drawable/selector_button_red_to_white_solid"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin_half"
                android:paddingRight="@dimen/activity_horizontal_margin_half"
                android:text="分享"
                android:textColor="@drawable/selector_text_color_pressed_white_to_red"
                android:textSize="@dimen/txt_xlarge"/>
        </RelativeLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_limit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_02"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:text="剩余"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/txt_middle"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_02"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@+id/tv_limit_tag"
            android:gravity="center_vertical"
            android:text="1749"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/txt_middle"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_limit_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_02"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@+id/tv_limit"
            android:gravity="center_vertical"
            android:text="份人数"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/txt_middle"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_whole_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl_02"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:text="元"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/txt_middle"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_whole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_02"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@+id/tv_whole_end"
            android:gravity="center_vertical"
            android:text="0.5"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/txt_middle"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_whole_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_02"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@+id/tv_whole"
            android:gravity="center_vertical"
            android:text="分享累计"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/txt_middle"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>