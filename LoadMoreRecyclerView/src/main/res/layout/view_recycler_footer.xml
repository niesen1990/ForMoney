<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_no_data_footer"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        />

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/pb_load_more_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/custom_progress_bar_bg"
        android:layout_gravity="center_vertical"
        android:interpolator="@android:interpolator/cycle"
        android:layout_marginRight="10dip"
        android:indeterminate="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_load_more_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/black"
        android:text="没有更多了~" />
    </LinearLayout>


</RelativeLayout>